{
  "compilerOptions": {
    //File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    //Module & target
    "module": "NodeNext",
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "verbatimModuleSyntax": false,

    //Types voor Node
    "types": ["node"],
    "lib": ["ESNext"],

    //Output opties
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    //Stricter checks
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    //Interop
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"]
}
